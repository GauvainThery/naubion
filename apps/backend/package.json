{
  "name": "@naubion/backend",
  "version": "1.0.0",
  "description": "Backend Express server for naubion",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "dev": "npm run build && nodemon",
    "dev:fresh": "npm run clean && npm run build && nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
